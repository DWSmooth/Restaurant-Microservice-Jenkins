pipeline {
    agent any
    stages {
        stage("install common library") {
            steps {
                // Remove Common-Library folder if it's already there
                bat 'rmdir \"Common-Library\" /S /Q'
                // Clone the common library git repo
                bat 'git clone https://github.com/april2022-j-capstone/common-library.git'
                // Switch to the common library repo root
                dir("Common-Library") {
                    // Switch to common library dev branch
                    bat 'git checkout dev'
                    // Maven clean install
                    bat 'mvn -X clean install'
                }
            }
        }
        stage("build microservice") {
            steps {
                // Switch to the main repo package
                dir("restaurant-microservice") {
                    // Maven clean package to produce jar
                    bat 'mvn -X clean package'
                    //archiveArtifacts artifacts: 'target/*.jar'
                    // Make docker image and push to ECR
                    bat 'aws ecr get-login-password --region us-east-1 | docker login --username DougWalter --password-stdin 347673321751.dkr.ecr.us-east-1.amazonaws.com'
                    bat 'docker build -t scrumbags-user .'
                    bat 'docker tag scrumbags-user:latest 347673321751.dkr.ecr.us-east-1.amazonaws.com/scrumbags-restaurant:latest'
                    bat 'docker push 347673321751.dkr.ecr.us-east-1.amazonaws.com/scrumbags-restaurant:latest'
                    bat 'rmdir \"target\" /S /Q'
                    // Publish package?
                }
            }
        }
    }
    post {
        always{ 
            bat 'rmdir \"Common-Library\" /S /Q'
        }
    }
}