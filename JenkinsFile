pipeline {

    /*
    * Use any available Jenkins agent
    */
    agent any

    stages {

        stage("Install Common Library") {
            steps {
                // clone the common library git repo
                sh 'git clone https://github.com/April2022-J-Capstone/Common-Library.git'
                // cd to the common library repo root
                dir("Common-Library") {
                    // switch to common library dev branch
                    sh 'git checkout dev'
                    sh 'ls -aoUgh'
                    // maven clean install
                    sh 'mvn -X clean install'
                }
            }
        }

        stage("Build Microservice") {
            steps {
                // cd to the main repo package
                dir("restaurant-microservice") {
                    // maven clean package to produce jar
                    sh 'mvn clean package'
                }
            }
        }

        stage("Run Microservice") {
            steps {
                dir("restaurant-microservice/target") {
                    // run microservice
                    sh 'JARNAME=$(find . -name "*.jar")'
                    sh 'java $JARNAME &>/dev/null &'
                    echo "Microservice starting"
                }
            }
        }

        // stage("Test Microservice ") {
        //     steps {
        //         // clone the test repo
        //         sh 'git clone {testGitRepoURL}'
        //         // cd to the test repo root
        //         dir("{testGitRepoName}") {
        //             // run the test suite
        //             sh 'python {testEntryPoint}.py'
        //         }
        //     }
        // }

    }

    post {
        always {
            sh 'rm -rf Common-Library/'
            // sh 'rm -rf {testGitRepoURL}'
        }
    }
}